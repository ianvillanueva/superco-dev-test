{% assign hero_banner_settings = section.settings %}

<div class="banner">
  <div class="img-wrap">
    {% if hero_banner_settings.banner_image != null %}
      <img src="{{ hero_banner_settings.banner_image | img_url: 'master' }}" alt="Banner">
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "label": "Banner Image",
      "id": "banner_image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
