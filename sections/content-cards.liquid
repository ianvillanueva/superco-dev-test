{% assign content_card_settings = section.settings %}

<div class="section content-cards">
  <div class="container">
    {% if content_card_settings.heading != '' %}
      <div class="heading-wrap">
        <h2>{{ content_card_settings.heading }}</h2>
      </div>
    {% endif %}
  </div>

  <div class="content-card-items cards-carousel">
    {%- if section.blocks.size > 1 -%}
      {%- for block in section.blocks -%}
        <div class="card-item" style="background-color:{{ block.settings.color_bg}}">
          {% if block.settings.image != null %}
            <div class="img-wrap">
              <img src="{{ block.settings.image | img_url: 'master' }}">
            </div>
          {% endif %}
          <div class="content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.content }}</p>
            <a href="{{block.settings.link}}">{{ block.settings.link_title }}</a>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Content Cards",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "Card",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "color",
          "id": "color_bg",
          "label": "Background Color"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "link_title",
          "label": "Link Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Content Cards",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
